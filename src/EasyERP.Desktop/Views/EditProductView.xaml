<UserControl x:Class="EasyERP.Desktop.Views.EditProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <telerik:RadPropertyGrid Grid.Row="0" x:Name="PropertyGrid1" Item="{Binding Path=Product, Mode=TwoWay}"
                                 NestedPropertiesVisibility="Visible"
                                 RenderMode="Flat" />

        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Cancel" Content="Cancel" Width="40" Height="30" />
            <Button x:Name="Ok" Margin="10,0,0,0" Content="Ok" Width="50" Height="30" />
        </StackPanel>
    </Grid>
</UserControl>