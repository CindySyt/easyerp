@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">我的订单</div>
    </div>
    <div class="form-group">
        <input id="order-status" value="1"/>
    </div>
    <div id="order-list"></div>
    <script type="text/x-kendo-template" id="order-item-template">
        <div class="order">
            <div class="order-products" />
        </div>       
    </script>
    <script>
        $(document).ready(function() {
            var orderStatus = [
                { text: "全部订单", value: "0" },
                { text: "未处理", value: "1" },
                { text: "交易成功", value: "2" },
                { text: "交易取消", value: "3" },
                { text: "交易结束", value: "4" }
            ];

            // create DropDownList from input HTML element
            $("#order-status").kendoDropDownList({
                dataTextField: "text",
                dataValueField: "value",
                dataSource: orderStatus,
                index: 0,
                change: onChange
            });

            var status = $("#order-status").data("kendoDropDownList");

            status.select(0);

            function onChange() {

            };

            var orders = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/Order/Orders",
                        type: "POST",
                        dataType: "json"
                    }
                },
                schema: {
                    model: { id: "id" },
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                }
            });

        });
    </script>
}