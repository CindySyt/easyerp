    Html.AppendScriptParts("~/Scripts/jquery.validate.min.js");
    Html.AppendScriptParts("~/Scripts/jquery-1.10.2.js");

    //page title
    var adminPageTitle = "";
    if (!String.IsNullOrWhiteSpace(ViewBag.Title))
