@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SiderBar{
    <div id="nav-wrapper">

        <div id="nav" class="root">

            <div id="root-nav">

                <ul id="siderbar-nav" class="root-nav-categories">
                    <li>
                        <h3>@Html.ActionLink("产品信息", "Index", "Product")</h3>
                    </li>

                    <li>
                        <h3>@Html.ActionLink("添加产品", "Create", "Product")</h3>
                    </li>

                    <li>
                        <h3>@Html.ActionLink("入库", "Inventory", "Product")</h3>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            var actionName = "@ViewContext.RouteData.Values["Action"].ToString()";
            if (actionName === "Index") {
                actionName = "List";
            }
            $("#siderbar-nav a").each(function (index) {
                var action = this.pathname.split("/")[2];
                if (!action || action === "index") {
                    action = "List";
                }
                if (action === actionName) {
                    $(this).parent().parent().addClass("active");
                }
            });
        });
    </script>

}

<div id="section-title" class="row">@RenderSection("SectionTitle", false)</div>

@RenderBody()

@RenderSection("scripts", false)