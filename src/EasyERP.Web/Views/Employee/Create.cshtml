@section SectionTitle
{
    <div>
        员工- 创建
    </div>
}
@using System.Web.Optimization
@model EasyERP.Web.Models.EmployeeModel
@using (Html.BeginForm("Create", "Employee", FormMethod.Post, new
{
    @class = "",
    role = "form"
}))
{
    @Html.AntiForgeryToken()
    <div>
        <button type="submit">保存</button>
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.FirstName, new { @class = "" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IdNumber, new { @class = "" })
        @Html.TextBoxFor(m => m.IdNumber, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birth, new { @class = "" })
        @Html.TextBoxFor(m => m.Birth, new { @id = "datepicker" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Male, new { @class = "" })
        @Html.RadioButtonFor(m => m.Male, true)男
        @Html.RadioButtonFor(m => m.Male, false)女
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Married, new { @class = "" })
        @Html.RadioButtonFor(m => m.Married, true)已婚
        @Html.RadioButtonFor(m => m.Married, false)未婚
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Race, new { @class = "" })
        @Html.TextBoxFor(m => m.Race, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EduBackground, new { @class = "" })
        @Html.TextBoxFor(m => m.EduBackground, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NativePlace, new { @class = "" })
        @Html.TextBoxFor(m => m.NativePlace, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "" })
        @Html.TextBoxFor(m => m.Address, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HomePhone, new { @class = "" })
        @Html.TextBoxFor(m => m.HomePhone, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EMail, new { @class = "" })
        @Html.TextBoxFor(m => m.EMail, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Department, new { @class = "" })
        @Html.TextBoxFor(m => m.Department, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SalaryOfMonth, new { @class = "" })
        @Html.TextBoxFor(m => m.SalaryOfMonth, new { @class = "" })
    </div>
}
<script>
    $(document).ready(function () {
        $("#datepicker").kendoDatePicker({
            format: "yyyy-MM-dd"
        });
    })
</script>
@section Scripts {
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
}