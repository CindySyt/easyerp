@using EasyERP.Web.Framework
@model EasyERP.Web.Models.Products.ProductModel
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
<script>
    $(document).ready(function() {
        $("#product-edit").kendoTabStrip({
            animation: {
                open: {
                    effects: "fadeIn"
                }
            },
            select: tabstrip_on_tab_select
        });
    });
</script>
<div id="product-edit">
    <ul>
        <li @Html.RenderSelectedTabIndex(0, GetSelectedTabIndex())>
            "产品信息"
        </li>
    </ul>
    <div>
        @TabInfo()
    </div>
</div>
@*save selected tab index*@
<input type="hidden" id="selected-tab-index" name="selected-tab-index" value="1">
@helper TabInfo()
{ @Html.Partial("_CreateOrUpdate.Info", Model) }